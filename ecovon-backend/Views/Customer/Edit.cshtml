@model Customer
@{
    ViewData["Title"] = "Edit";
}

<div class="content">
    <div class="container-fluid my_board">
        <div class="col-md-12">
            <div class="whitebox">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <form method="post" asp-antiforgery="true" enctype="multipart/form-data">
                            <div>
                                <label asp-for="Name"> Customer Name: </label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name"></span>
                            </div>
                            <div>
                                <label asp-for="Email"> Email: </label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div>
                                <label asp-for="PrimaryPhone">Primary Phone Number: </label>
                                <input asp-for="PrimaryPhone" class="form-control" />
                                <span asp-validation-for="PrimaryPhone"></span>
                            </div>
                            <div>
                                <label asp-for="AlternatePhone">Alternate Phone Number: </label>
                                <input asp-for="AlternatePhone" class="form-control" />
                                <span asp-validation-for="AlternatePhone"></span>
                            </div>
                            <div>
                                <label asp-for="Address1">Address1: </label>
                                <input asp-for="Address1" class="form-control" />
                                <span asp-validation-for="Address1"></span>
                            </div>
                            <div>
                                <label asp-for="Address2">Address2: </label>
                                <input asp-for="Address2" class="form-control" />
                                <span asp-validation-for="Address2"></span>
                            </div>
                            <div>
                                <label asp-for="Address3">Address3: </label>
                                <input asp-for="Address3" class="form-control" />
                                <span asp-validation-for="Address3"></span>
                            </div>
                            <div>
                                <label asp-for="City">City: </label>
                                <input asp-for="City" class="form-control" />
                                <span asp-validation-for="City"></span>
                            </div>
                            <div>
                                <label asp-for="State">State: </label>
                                <input asp-for="State" class="form-control" />
                                <span asp-validation-for="State"></span>
                            </div>
                            <div>
                                <label asp-for="Country">Country: </label>
                                <input asp-for="Country" class="form-control" />
                                <span asp-validation-for="Country"></span>
                            </div>
                            <div>
                                <label asp-for="Zip">Zipcode: </label>
                                <input asp-for="Zip" class="form-control" />
                                <span asp-validation-for="Zip"></span>
                            </div>
                            <br/>
                            <div>
                                <input class="btn btn-primary" type="submit" value="Update Customer" />
                                <a class="btn btn-primary" asp-action="Index" asp-controller="Customer">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

